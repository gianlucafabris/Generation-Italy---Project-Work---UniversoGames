package com.universogames.cmsnewsrecensioni.entities;

import java.sql.Date;
import java.util.ArrayList;

public class Recensione {
	
	private int id;
	private Date data;
	private String recensione;
	private int punteggio;
	private Utente autore;
//	private Videogioco videogioco;
	private ArrayList<Immagine> immagini;
	
	public Recensione(int id, Date data, String recensione, int punteggio, Utente autore, ArrayList<Immagine> immagini) {
		this.id = id;
		this.data = data;
		this.recensione = recensione;
		this.punteggio = punteggio;
		this.autore = autore;
		this.immagini = immagini;
	}

	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public Date getData() {
		return data;
	}

	public void setData(Date data) {
		this.data = data;
	}

	public String getRecensione() {
		return recensione;
	}

	public void setRecensione(String recensione) {
		this.recensione = recensione;
	}

	public int getPunteggio() {
		return punteggio;
	}

	public void setPunteggio(int punteggio) {
		this.punteggio = punteggio;
	}

	public Utente getAutore() {
		return autore;
	}

	public void setAutore(Utente autore) {
		this.autore = autore;
	}

	public ArrayList<Immagine> getImmagini() {
		return immagini;
	}

	public void setImmagini(ArrayList<Immagine> immagini) {
		this.immagini = immagini;
	}
	
}
