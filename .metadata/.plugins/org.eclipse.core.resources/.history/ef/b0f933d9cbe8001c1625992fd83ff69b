select * from recensioni join utenti on idutente = utenti.id;

drop table if exists immagini;
create table immagini (
	id int primary key auto_increment,
    nomeimmagine Varchar(100),
    idnotizia int,
    idrecensione int,
    foreign key (idnotizia) references notizie(id),
    foreign key (idrecensione) references recensioni(id)
);

